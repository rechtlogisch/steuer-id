{
    "name": "rechtlogisch/steuer-id",
    "description": "Validates the German Tax-ID (Steuerliche Identifikationsnummer)",
    "keywords": [
        "rechtlogisch",
        "tax-id",
        "steuer-id",
        "steuerliche identifikationsnummer",
        "germany"
    ],
    "homepage": "https://github.com/rechtlogisch/steuer-id",
    "license": "MIT",
    "authors": [
        {
            "name": "Krzysztof Tomasz Zembrowski",
            "email": "zembrowski@users.noreply.github.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "pestphp/pest": "^2.20",
        "phpstan/phpstan": "^1.11"
    },
    "autoload": {
        "psr-4": {
            "Rechtlogisch\\SteuerId\\": "src"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint",
        "quality": [
            "@format",
            "@test",
            "@analyse",
            "@coverage"
        ],
        "test": "vendor/bin/pest"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
